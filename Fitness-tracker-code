<script>
let workouts = [];
let weeklyGoal = 0;
let streak = 0;
let lastWorkoutDate = null;

const ctx = document.getElementById('progressChart').getContext('2d');
const progressChart = new Chart(ctx, {
    type: 'bar',
    data: { labels: [], datasets: [{ label: 'Calories Burned', data: [], backgroundColor: [], borderRadius: 10 }] },
    options: { responsive: true, animation: { duration: 800, easing: 'easeOutBounce' }, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
});

function getRandomColor() {
    const colors = ['#c78f8f','#a3b3a3','#d8b4a6','#b8c7b8','#e2c9b8','#c7b3a3','#d9a3a3'];
    return colors[Math.floor(Math.random() * colors.length)];
}

function updateChart() {
    progressChart.data.labels = workouts.map(w => w.type);
    progressChart.data.datasets[0].data = workouts.map(w => w.calories);
    progressChart.data.datasets[0].backgroundColor = workouts.map(() => getRandomColor());
    progressChart.update();

    const totalCalories = workouts.reduce((sum, w) => sum + w.calories, 0);
    $('#goalProgress').text(totalCalories);

    let progressPercent = weeklyGoal ? Math.min((totalCalories / weeklyGoal) * 100, 100) : 0;
    $('#goalProgressBar').css('width', progressPercent + '%').text(Math.floor(progressPercent) + '%');
}

function updateStreak() {
    const today = new Date().toDateString();
    if(lastWorkoutDate !== today) {
        if(lastWorkoutDate === new Date(Date.now() - 86400000).toDateString()) {
            streak++;
        } else {
            streak = 1;
        }
        lastWorkoutDate = today;
        $('#streakCount').text(streak);
    }
}

$('#workoutForm').submit(function(e) {
    e.preventDefault();
    const type = $('#type').val();
    const duration = parseInt($('#duration').val());
    const calories = parseInt($('#calories').val());

    workouts.push({ type, duration, calories });
    $('#type').val(''); $('#duration').val(''); $('#calories').val('');
    updateChart();
    updateStreak();
});

$('#goalForm').submit(function(e) {
    e.preventDefault();
    weeklyGoal = parseInt($('#weeklyGoal').val());
    $('#goalTarget').text(weeklyGoal);
    updateChart();
});
</script>
